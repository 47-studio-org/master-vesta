<table aria-label="Users Information" class="users-table">
  <thead>
    <tr>
      <th scope="col">Last Name</th>
      <th scope="col">First Name</th>
      <th scope="col">Username</th>
      <th scope="col">Class Year</th>
      <% unless hide_actions %>
        <th scope="col"></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr id="user-<%= user.id %>">
        <th scope="row" data-role="user-last_name"><%= user.last_name %></th>
        <td data-role="user-first_name"><%= user.first_name %></td>
        <td data-role="user-username"><%= user.username %></td>
        <td data-role="user-class_year"><%= user.class_year %></td>
        <% unless hide_actions %>
          <td class="actions" data-role="user-actions"><%= render 'users/actions', user: user  %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
